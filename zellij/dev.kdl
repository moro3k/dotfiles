// Dev layout - основной рабочий layout
layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        children
        pane size=2 borderless=true {
            plugin location="zellij:status-bar"
        }
    }

    // Главная вкладка - Claude Code
    tab name="claude" focus=true {
        pane
    }

    // Вторая вкладка - разработка (редактор + терминал)
    tab name="dev" {
        pane split_direction="vertical" {
            pane size="60%"  // основная панель
            pane size="40%"  // вспомогательная
        }
    }

    // Третья вкладка - git
    tab name="git" {
        pane command="gitui"
    }
}
